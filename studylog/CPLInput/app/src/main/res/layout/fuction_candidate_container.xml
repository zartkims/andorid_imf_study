<?xml version="1.0" encoding="utf-8"?>
<com.northeastern_uni.caipengli.cplinput.view.FunctionCandidateContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_function_candidate"
    android:orientation="horizontal"
    android:background="@android:color/holo_green_light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/bt_setting"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/tab_setting_selector"
        />

    <ImageView
        android:id="@+id/bt_float_model"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:src="@drawable/tab_float_selector"
        android:scaleType="centerInside"
        />
    <ImageView
        android:id="@+id/bt_resize"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:text="resize"
        android:visibility="gone"
        android:src="@drawable/tab_resize_selector"
        />

    <ImageView
        android:id="@+id/bt_hide_self"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/tab_hide_selector"
        />


</com.northeastern_uni.caipengli.cplinput.view.FunctionCandidateContainer>